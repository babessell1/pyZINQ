@article{wright_native_2023,
	title = {Native functions of short tandem repeats},
	volume = {12},
	issn = {2050-084X},
	url = {https://elifesciences.org/articles/84043},
	doi = {10.7554/eLife.84043},
	abstract = {Over a third of the human genome is comprised of repetitive sequences, including more than a million short tandem repeats (STRs). While studies of the pathologic consequences of repeat expansions that cause syndromic human diseases are extensive, the potential native functions of STRs are often ignored. Here, we summarize a growing body of research into the normal biological functions for repetitive elements across the genome, with a particular focus on the roles of STRs in regulating gene expression. We propose reconceptualizing the pathogenic consequences of repeat expansions as aberrancies in normal gene regulation. From this altered viewpoint, we predict that future work will reveal broader roles for STRs in neuronal function and as risk alleles for more common human neurological diseases.},
	language = {en},
